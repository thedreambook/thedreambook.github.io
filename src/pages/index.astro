import ThumbnailImage from "../assets/blog/first-post/thumbnail.png";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Navbar />

    <main class="px-10 md:px-[40rem] mt-20 mb-16">
      <h1 class="text-4xl pb-10">ðŸ“– Welcome to The Dream Book!</h1>

